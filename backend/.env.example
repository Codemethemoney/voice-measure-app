# Application Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=voice_measure
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_MAX_CONNECTIONS=10
DB_IDLE_TIMEOUT=10000

# JWT Authentication
JWT_SECRET=your-secret-key-min-32-chars
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Google Cloud Configuration (Voice Recognition)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_CREDENTIALS=your-credentials-path
SPEECH_TO_TEXT_LANGUAGE_CODE=en-US

# WebSocket Configuration
WS_PORT=3001
WS_PATH=/ws
WS_HEARTBEAT_INTERVAL=30000

# Security Configuration
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
RATE_LIMIT_ENABLED=true
TLS_ENABLED=false

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE_ENABLED=false
LOG_FILE_PATH=logs/app.log

# Email Configuration (Optional)
EMAIL_SERVICE=Gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USERNAME=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=no-reply@voice-measure.com

# Error Reporting & Monitoring
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
METRICS_ENABLED=false
PROFILER_ENABLED=false

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# Feature Flags
FEATURE_OFFLINE_MODE=true
FEATURE_VOICE_RECOGNITION=true
FEATURE_REAL_TIME_SYNC=true
FEATURE_EMAIL_NOTIFICATIONS=false